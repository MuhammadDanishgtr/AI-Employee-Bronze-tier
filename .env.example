# Copy this to .env and fill in your values
# NEVER commit .env to version control

# Vault path (absolute path to your Obsidian vault)
VAULT_PATH=D:/hackathon-0-PersonalAI-Employee/AI_Employee_Vault

# Drop folder path (where you drop files for the AI to process)
DROP_FOLDER_PATH=D:/hackathon-0-PersonalAI-Employee/AI_Employee_Vault/Drop_Folder

# Watcher settings
CHECK_INTERVAL=10
DRY_RUN=true

# Gmail API credentials
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_TOKEN_PATH=./credentials/gmail_token.json
GMAIL_CREDENTIALS_PATH=./credentials/gmail_credentials.json

# LinkedIn automation
LINKEDIN_SESSION_PATH=./credentials/linkedin_session
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Scheduling intervals (seconds)
SCHEDULE_GMAIL_INTERVAL=120
SCHEDULE_LINKEDIN_INTERVAL=900
SCHEDULE_DASHBOARD_INTERVAL=600
SCHEDULE_ODOO_INTERVAL=3600
SCHEDULE_FACEBOOK_INTERVAL=600
SCHEDULE_TWITTER_INTERVAL=600
SCHEDULE_ERROR_RECOVERY_INTERVAL=1800

# Odoo accounting (Docker: http://localhost:8069)
ODOO_URL=http://localhost:8069
ODOO_DB=ai_employee_db
ODOO_USERNAME=admin
ODOO_PASSWORD=admin

# Facebook Graph API
FACEBOOK_PAGE_ID=
FACEBOOK_ACCESS_TOKEN=

# Twitter / X API v2
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# Weekly CEO Briefing schedule (cron)
AUDIT_SCHEDULE_DAY=mon
AUDIT_SCHEDULE_HOUR=8
